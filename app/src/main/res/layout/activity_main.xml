<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragmentcategory_background"
    android:padding="16dp">
    <ImageView
        android:id="@+id/iv1Logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/spendsense"
        android:contentDescription="App Logo"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Buttons for fragment navigation -->
    <Button
        android:id="@+id/btnCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Categories"
        android:backgroundTint="#003A63"/>

    <Button
        android:id="@+id/btnExpenses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Expenses"
        android:backgroundTint="#003A63"/>

    <Button
        android:id="@+id/btnGoals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Budget Goals"
        android:backgroundTint="#003A63"/>

    <Button
        android:id="@+id/btnSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Summary"
        android:backgroundTint="#003A63"/>

    <!-- Fragment container -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
