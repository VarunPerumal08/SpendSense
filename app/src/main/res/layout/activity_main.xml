<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/fragmentcategory_background">


    <ImageView
        android:id="@+id/iv10Logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/spendsense"
        android:contentDescription="App Logo"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to BudgetApp"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnGoogleSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#003A63"/>

    <Button
        android:id="@+id/btnFacebookSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Facebook"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#003A63"/>

    <Button
        android:id="@+id/btnEmailSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Email"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#003A63"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have an account? Log In"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#003A63"/>
</LinearLayout>